<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="edu.ub.pis2019.pis_16.tempac">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            tools:ignore="GoogleAppIndexingWarning">
        <activity
                android:name=".View.ConfirmExitActivity"
            android:theme="@style/AppTheme.PopUpTheme">
        </activity>
        <activity android:name=".View.SignUpActivity">
        </activity>
        <activity
                android:name=".View.GameActivity"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
                tools:ignore="ExtraText">
        </activity>
        <activity
                android:name=".View.LogInActivity"
                tools:ignore="ExtraText"
                android:allowBackup="true"
                android:icon="@mipmap/ic_launcher"
                android:label="@string/app_name"
                android:roundIcon="@mipmap/ic_launcher_round"
                android:supportsRtl="true"
                android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".View.CreditsActivity">
        </activity>
        <activity android:name=".View.SettingsActivity">
        </activity>
        <activity android:name=".View.MainMenuActivity">
        </activity>
        <activity android:name=".View.HighScoreActivity">
        </activity>
    </application>

</manifest>