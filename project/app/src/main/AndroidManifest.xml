<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="edu.ub.pis2019.pis_16.tempac">

    <application
            android:name=".Presenter.TempacApplication"
            android:allowBackup="true"
            android:icon="@mipmap/icon"
            android:roundIcon="@mipmap/icon_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            tools:ignore="GoogleAppIndexingWarning">

        <activity
                android:name=".View.ChooseUsernameActivity"
                android:windowSoftInputMode="stateVisible"
                android:theme="@style/AppTheme.PopUpTheme">

        </activity>
        <activity
                android:label="@string/app_name"
                android:name=".View.ConfirmExitActivity"
                android:theme="@style/AppTheme.PopUpTheme">
        </activity>
        <activity
                android:name=".View.GameActivity"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
                android:screenOrientation="portrait"
                tools:ignore="ExtraText">
        </activity>
        <activity
                android:name=".View.LogInActivity"
                android:screenOrientation="portrait"
                android:allowBackup="true"
                android:label="@string/app_name"
                android:supportsRtl="true"
                android:theme="@style/AppTheme"
                tools:ignore="ExtraText">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".View.CreditsActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".View.SettingsActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".View.MainMenuActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".View.HighScoreActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".View.TutorialActivity"
                  android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
                  android:screenOrientation="portrait">
        </activity>
    </application>



</manifest>