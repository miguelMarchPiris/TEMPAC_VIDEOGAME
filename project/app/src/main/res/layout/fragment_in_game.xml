<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".InGameFragment" android:id="@+id/frameLayout">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".GameActivity"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/backgroundLayout">
        <Button
                android:text="@string/die"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dieButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="160dp"
                android:layout_marginRight="160dp"
                android:textColor="#DBF906"
                style="@style/ButtonLight" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.987" app:layout_constraintVertical_bias="0.536"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal" android:id="@+id/linearLayout2" android:layout_marginTop="8dp"
                      app:layout_constraintTop_toTopOf="parent"
                    android:padding="8dp">
            <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/temperatureBar"
                    android:indeterminate="false"
                    android:max="100"
                    android:minHeight="25dp"
                    android:minWidth="200dp"
                    android:progress="1"
                    android:progressDrawable="@drawable/progress_states"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>
            <TextView
                    android:text="24 ÂºC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/temp_text" app:layout_constraintStart_toEndOf="@+id/temperatureBar"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp"/>
            <Button
                    android:text="@string/pause"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/pauseButton"
                    android:background="@drawable/button_normal"
                    android:layout_gravity="right"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/brightYellow"
            />
        </LinearLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:src="@drawable/pac_example"
                android:id="@+id/imageView"
                android:scaleType="fitXY" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:alpha="0.1"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout2"/>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>